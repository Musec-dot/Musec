<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>MUSEC - A Networking App For Musicians</title>
  <style>
    
@import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300..700&display=swap');

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: "Space Grotesk", sans-serif;
  background-color: #000;
  color: #fff;
  line-height: 1.6;
}

header {
  padding: 2rem 1rem;
  text-align: center;
  background-color: #000;
  display: flex;
  justify-content: space-between;
  align-items: center;
  max-width: 1400px;
  margin: 0 auto;
}

.logo {
  font-size: 2.5rem;
  font-weight: 600;
  letter-spacing: 0.15em;
  background: linear-gradient(135deg, #fff 5%, #ff6b35 50%, #ff8c42 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 4rem;
}

.hero {
  padding: 4rem 1rem 8rem;
  text-align: center;
  background: linear-gradient(to bottom, #000 0%, #1a0f0a 70%, #2d1810 100%);
  position: relative;
  overflow: hidden;
  height: 81.5vh;
}

.hero::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 1200px;
  height: 500px;
  background: radial-gradient(circle at bottom, rgba(255, 107, 53, 0.4) 0%, rgba(255, 107, 53, 0.2) 30%, transparent 90%);
  filter: blur(40px);
  pointer-events: none;
}

.hero-content {
  position: relative;
  z-index: 1;
  max-width: 1400px;
  margin: 0 auto;
}

.hero-subtitle {
  font-size: 1.5em;
  color: #999;
  margin-bottom: 2rem;
  border: #2b2a2a 1px solid;
  max-width: 450px;
  margin: 0 auto;
  border-radius: 2rem;
  margin-bottom: 3rem;
}

.hero h1 {
  font-size: 4.5rem;
  font-weight: 700;
  margin-bottom: 1rem;
  line-height: 1.2;
  background: linear-gradient(135deg, #fff 0%, #ff6b35 60%, #ff8c42 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  height: 95px;
}

.hero-description {
  font-size: 1.5rem;
  color: #ccc;
  margin-bottom: 2rem;
  margin-top: 3rem;
}

.cta-button {
  background-color: #fff;
  color: #000;
  border: none;
  padding: 0.875rem 3rem;
  font-size: 1.25rem;
  font-weight: 600;
  border-radius: 10px;
  cursor: pointer;
  transition: all 0.3s ease;
  margin-bottom: 0.75rem;
  width: 400px;
  margin-top: 1.5rem;
}

.cta-button:hover {
  background-color: #f0f0f0;
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(255, 255, 255, 0.2);
}

.hero-note {
  font-size: 1.2rem;
  color: #fff;
  margin-top: 0.5rem;
  font-weight: 400;
}

.who-section {
  height: 70vh;
  padding: 4rem 1rem;
  text-align: center;
  background-color: #000;
}

.who-section h2 {
  font-size: 3.5rem;
  font-weight: 700;
  margin-bottom: 2rem;
  background: linear-gradient(135deg, #fff 0%, #ff6b35 60%, #ff8c42 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.who-section p {
  max-width: 1500px;
  margin: 0 auto 2rem;
  color: #ccc;
  font-size: 2rem;
  line-height: 1.8;
}

.team-link {
  color: #ff6b35;
  text-decoration: none;
  font-size: 1.5rem;
  transition: color 0.3s ease;
}

.team-link:hover {
  color: #ff8c42;
}

.red-banner {
  height: 32vh;
  padding: 3rem 1rem;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  background: linear-gradient(to right, #ff0000 0%, #ff8551 50%, #ff0000 100%);
}

.red-banner h2 {
  font-size: 4rem;
  font-family:  "Space Grotesk", sans-serif;
  font-weight: 700;
  color: #fff;
  margin: 0;
}

.stay-tuned {
  height: 90vh;
  padding: 8rem 1rem;
  text-align: center;
  background-color: #0a0a0a;
}

.stay-tuned h2 {
  font-size: 8rem;
  font-weight: 700;
  font-family: "Space Grotesk", sans-serif;
  margin-bottom: 3rem;
  color: #fff;
}

.waitlist-button {
  background-color: #fff;
  color: #000;
  border: none;
  padding: 0.875rem 3rem;
  font-size: 1.35rem;
  font-weight: 600;
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.3s ease;
  margin-bottom: 0.75rem;
  width: 400px;
}

.waitlist-button:hover {
  background-color: #f0f0f0;
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(255, 255, 255, 0.2);
}

.waitlist-note {
  font-size: 0.75rem;
  color: #888;
  margin-top: 0.75rem;
}

footer {
  padding: 2rem 1rem;
  background-color: #000;
  border-top: 1px solid #1a1a1a;
}

.footer-content {
  max-width: 1200px;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: 1rem;
}

.footer-logo {
  font-size: 1rem;
  font-weight: 600;
  letter-spacing: 0.15em;
}

.footer-email {
  color: #999;
  text-decoration: none;
  font-size: 0.875rem;
}

.footer-links {
  display: flex;
  gap: 1.5rem;
}

.footer-links a {
  color: #999;
  text-decoration: none;
  font-size: 0.875rem;
  transition: color 0.3s ease;
}

.footer-links a:hover {
  color: #fff;
}

.auth-buttons {
  display: flex;
  gap: 1rem;
  align-items: center;
}

.auth-button {
  background-color: transparent;
  color: #fff;
  border: 1px solid #fff;
  padding: 0.625rem 1.5rem;
  font-size: 1rem;
  font-weight: 500;
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.3s ease;
  text-decoration: none;
  display: inline-block;
}

.auth-button:hover {
  background-color: #fff;
  color: #000;
  transform: translateY(-1px);
}

.auth-button.primary {
  background-color: #fff;
  color: #000;
  border: 1px solid #fff;
}

.auth-button.primary:hover {
  background-color: #f0f0f0;
  border-color: #f0f0f0;
}

.footer-bottom {
  text-align: center;
  margin-top: 2rem;
  padding-top: 1rem;
  border-top: 1px solid #1a1a1a;
  color: #666;
  font-size: 0.75rem;
}

@media (max-width: 768px) {
  header {
    flex-direction: column;
    gap: 1.5rem;
  }

  .auth-buttons {
    flex-direction: column;
    width: 100%;
    max-width: 300px;
  }

  .auth-button {
    width: 100%;
  }

  .hero h1 {
    font-size: 1.75rem;
  }

  .who-section h2,
  .red-banner h2 {
    font-size: 1.5rem;
  }

  .stay-tuned {
    padding: 5rem 1rem;
  }

  .stay-tuned h2 {
    font-size: 2.25rem;
  }

  .footer-content {
    flex-direction: column;
    text-align: center;
  }

  .footer-links {
    justify-content: center;
  }
}
    </style>
</head>
<body>
  <header>
    <div class="logo">MUSEC</div>
    <div class="auth-buttons">
      <button class="auth-button" onclick="openLoginModal()">Login</button>
      <button class="auth-button primary" onclick="openSignupModal()">Sign Up as Hirer</button>
    </div>
  </header>

  <section class="hero">
    <div class="hero-content">
      <p class="hero-subtitle">A smart networking app for musicians</p>
      <h1>A Networking App Like Never Before.</h1>
      <p class="hero-description">because who isn't tired of scrolling linkedin with no real connections?</p>
      <div>
       <a href="/signup" class="cta-button" style="text-decoration: none; display: inline-block;">Join Musec</a>

        <p class="hero-note">be the first one to experiment this</p>
      </div>
    </div>
  </section>

  <section class="who-section">
    <h2>Who Are We?</h2>
    <p>
      Founded By A Passionate Team Of High Schoolers, We Aim To Make Connecting Smarter. Designed By 
      Gen Z, For Gen Z. Musec Is A Networking App Designed To Eliminate The Awkwardness Of Networking. 
      Connections Over Endless Swipes. Instead Of Fueling FOMO, It Fosters Meaningful Interactions And 
      Genuine Engagements. Our Vision Is Simple: Ditch Frustration With Modern Dating Apps, Find 
      Connections That Matter.
    </p>
    <a href="#" class="team-link">Know our team</a>
  </section>

  <section class="red-banner">
    <h2>Made For Modern Musicians.</h2>
  </section>

  <section class="stay-tuned">
    <h2>Stay Tuned.</h2>
    <div>
      <button class="waitlist-button">Join Waitlist</button>
      <p class="waitlist-note">Get the first early experimental</p>
    </div>
  </section>

  <footer>
    <div class="footer-content">
      <div class="footer-logo">MUSEC</div>
      <a href="mailto:musec@iluvsongs.org" class="footer-email">musec@iluvsongs.org</a>
      <nav class="footer-links">
        <a href="#">About</a>
        <a href="#">Instagram</a>
        <a href="#">LinkedIn</a>
        <a href="/login">Login</a>
      </nav>
    </div>
    <div class="footer-bottom">
      Â© Musec Enterprises 2025. All rights reserved.
    </div>
  </footer>

  <!-- Login Modal -->
  <div id="loginModal" class="modal" style="display: none;">
    <div class="modal-content">
      <span class="close" onclick="closeLoginModal()">&times;</span>
      <h2>Login</h2>
      <form action="/login" method="POST" class="modal-form">
        <div class="form-group">
          <label>Email</label>
          <input type="email" name="email" required placeholder="Email">
        </div>
        <div class="form-group">
          <label>Password</label>
          <input type="password" name="password" required placeholder="Password">
        </div>
        <% if (locals.error) { %>
          <p class="error-message">Incorrect email or password</p>
        <% } %>
        <button type="submit" class="submit-button">Log in</button>
      </form>
    </div>
  </div>

  <!-- Sign Up as Hirer Modal -->
  <div id="signupModal" class="modal" style="display: none;">
    <div class="modal-content">
      <span class="close" onclick="closeSignupModal()">&times;</span>
      <h2>Sign Up as Hirer</h2>
      <form action="/signup-hirer" method="POST" class="modal-form">
        <div class="form-group">
          <label>Username</label>
          <input type="text" name="username" required placeholder="Username">
        </div>
        <div class="form-group">
          <label>Email</label>
          <input type="email" name="email" required placeholder="Email">
        </div>
        <div class="form-group">
          <label>Password</label>
          <input type="password" name="password" required placeholder="Password">
        </div>
        <input type="hidden" name="role" value="hirer">
        <button type="submit" class="submit-button">Sign Up</button>
      </form>
    </div>
  </div>

  <style>
    .modal {
      display: none;
      position: fixed;
      z-index: 1000;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.8);
      backdrop-filter: blur(5px);
    }

    .modal-content {
      background-color: #1a1a1a;
      margin: 10% auto;
      padding: 2rem;
      border: 1px solid #333;
      border-radius: 12px;
      width: 90%;
      max-width: 450px;
      position: relative;
    }

    .close {
      color: #aaa;
      float: right;
      font-size: 28px;
      font-weight: bold;
      cursor: pointer;
      position: absolute;
      right: 1rem;
      top: 1rem;
    }

    .close:hover {
      color: #fff;
    }

    .modal-content h2 {
      color: #fff;
      margin-bottom: 1.5rem;
      font-size: 1.75rem;
    }

    .modal-form {
      display: flex;
      flex-direction: column;
      gap: 1.25rem;
    }

    .form-group {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    .form-group label {
      color: #ccc;
      font-size: 0.9rem;
      font-weight: 500;
    }

    .form-group input {
      background-color: #0a0a0a;
      border: 1px solid #333;
      color: #fff;
      padding: 0.75rem;
      border-radius: 6px;
      font-size: 1rem;
      outline: none;
      transition: border-color 0.3s;
    }

    .form-group input:focus {
      border-color: #ff6b35;
    }

    .submit-button {
      background-color: #fff;
      color: #000;
      border: none;
      padding: 0.875rem 2rem;
      font-size: 1rem;
      font-weight: 600;
      border-radius: 6px;
      cursor: pointer;
      transition: all 0.3s ease;
      margin-top: 0.5rem;
    }

    .submit-button:hover {
      background-color: #f0f0f0;
      transform: translateY(-1px);
    }

    .error-message {
      color: #ff6b35;
      font-size: 0.875rem;
      margin-top: -0.5rem;
    }
  </style>

  <script>
    function openLoginModal() {
      document.getElementById('loginModal').style.display = 'block';
    }

    function closeLoginModal() {
      document.getElementById('loginModal').style.display = 'none';
    }

    function openSignupModal() {
      document.getElementById('signupModal').style.display = 'block';
    }

    function closeSignupModal() {
      document.getElementById('signupModal').style.display = 'none';
    }

    window.onclick = function(event) {
      const loginModal = document.getElementById('loginModal');
      const signupModal = document.getElementById('signupModal');
      if (event.target == loginModal) {
        loginModal.style.display = 'none';
      }
      if (event.target == signupModal) {
        signupModal.style.display = 'none';
      }
    }
  </script>
</body>
</html>