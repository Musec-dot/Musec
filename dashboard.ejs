      <div class="close-button">
        <i class="fas fa-arrow-left arrow"></i>
      </div>
    </div>
    
    <div class="musician-list">
      <% if (locals.allUsers) { %>
        <% allUsers.forEach(user => { %>
          <div class="musician-profile">
            <img class="profile-pic" src="/images/1.png" alt="Musician Profile">
            <div class="musician-info">
              <div class="name"><%= user.username %></div>
              <div class="role">UI/UX designer</div>
            </div>
            <form action="/requests/send" method="POST">
  <input type="hidden" name="toId" value="<%= user._id %>">
            <button class="connect-button" type="submit">CONNECT</button></form>
          </div>
        <% }) %>
      <% } else { %>
        <p class="text-white">No users found.</p>
      <% } %>
    </div>
  </section>
             <a href="/msg" style="text-decoration: none; color: inherit;">
  <section class="messages-card" style="cursor: pointer;">
      <h3>Messages</h3>
      <div class="message-avatars">
          <img src="/images/1.png" alt="Avatar 1">
          <img src="/images/1.png" alt="Avatar 2">
          <img src="/images/1.png" alt="Avatar 3">
      </div>
      <i class="fas fa-comment-alt messages-card-icon"></i>
  </section>
</a>

</aside>
    </main>


<script src="musec.js"></script>
 
</body>

</html>