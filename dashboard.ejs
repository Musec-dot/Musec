  <div class="main-container">

    <div class="left-column">
            <div class="create-post">
       <form action="/new" method="POST" enctype="multipart/form-data">
  
  
  <div class="post-input-section">
    <img src="<%= locals.user?.profilePic || '/images/avatar.png' %>" 
         alt="<%= locals.user?.username || 'Your Profile Picture' %>" 
         class="post-avatar" />
    
    <input type="text" name="title" class="post-input" placeholder="Write a post" required>
  </div>

  <!-- Hidden file input -->
  <input type="file" name="media" id="mediaInput" accept="image/*,video/*,audio/*" style="display: none;">

  <!-- Post Options -->
  <div class="post-options">
    <label for="mediaInput">
      <i class="fas fa-video"></i> Video
    </label>
    <label for="mediaInput">
      <i class="fas fa-image"></i> Photo
    </label>
    <label for="mediaInput">
      <i class="fas fa-microphone"></i> Audio
    </label>
  </div>

  <!-- Hidden submit -->
  <button type="submit" style="display: none;">Post</button>
</form>

      </div>
      <div class="find-studio-card">
        <div class="header">
          <h2>Find Studios Near You</h2>
          <i class="fa-solid fa-arrow-right-long arrow"></i>
        </div>
        <div class="map">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3325.705697184839!2d-86.80243218479373!3d33.52066028075121!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x88891be50dd9caa5%3A0x902d30dbce2c449b!2sBirmingham%2C%20AL%2C%20USA!5e0!3m2!1sen!2sin!4v1690379265984!5m2!1sen!2sin"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
          ></iframe>
        </div>
        <div class="studio-list-container">
          <div class="studio">
            <div class="studio-info">
              <h3>Musec studio</h3>
              <p>3.5 km   <span class="green">★ 4.9</span>   <span class="available">Available</span></p>
            </div>
            <button class="book-btn">BOOK</button>
          </div>
          <div class="studio">
            <div class="studio-info">
              <h3>Musec studio</h3>
              <p>3.5 km   <span class="red">★ 2.4</span>   <span class="booked">Booked</span></p>
            </div>
            <button class="book-btn">BOOK</button>
          </div>
          <div class="studio">
            <div class="studio-info">
              <h3>Another Studio Name</h3>
              <p>5.2 km   <span class="green">★ 4.1</span>   <span class="available">Available</span></p>
            </div>
            <button class="book-btn">BOOK</button>
          </div>
          <div class="studio">
            <div class="studio-info">
              <h3>Cool Beats Studio</h3>
              <p>1.1 km   <span class="green">★ 5.0</span>   <span class="available">Available</span></p>
            </div>
            <button class="book-btn">BOOK</button>
          </div>
        </div>
      </div>
    </div>

    <div class="center-column">

<div class="post-container">
      <% posts.forEach(function(post) { %>
  <div class="post">
    <!-- Post Header -->
    <div class="post-header">
      <img src="<%= post.author?.profilePic || '/images/avatar.png' %>" 
           alt="<%= post.author?.username || 'User' %>" 
           class="post-avatar-pic">
      
      <div class="post-header-info">
        <h4><%= post.author?.username || 'User' %></h4>
        <p><%= post.author?.followersCount || 0 %> followers</p>
      </div>

      <div class="post-header-right">
        <i class="fas fa-ellipsis-h"></i>
        <form action="/requests/send" method="POST" style="margin: 0;">
        <input type="hidden" name="toId" value="<%= post.author?._id %>">
        <button class="connect-btn" type="submit">Connect</button>
      </form>
      </div>
    </div>

    <!-- Post Content -->
    <div class="post-content">
      <h2><%= post.title %></h2>
      <% if (post.content && post.content.trim() !== "") { %>
        <p><%= post.content %></p>
      <% } %>

      <% if (post.fileUrl && post.fileType === 'image') { %>
        <img class="post-media" src="<%= post.fileUrl %>" alt="Post image" />
      <% } else if (post.fileUrl && post.fileType === 'video') { %>
        <video class="post-media" controls>
          <source src="<%= post.fileUrl %>" type="video/mp4">
          Your browser does not support the video tag.
        </video>
      <% } else if (post.fileUrl && post.fileType === 'audio') { %>
        <audio class="post-media" controls>
          <source src="<%= post.fileUrl %>" type="audio/mpeg">
          Your browser does not support the audio element.
        </audio>
      <% } %>
    </div>
  </div>
<% }); %>
    </div>
</div>
    <div class="right-column">
      <div class="musician-card">
        <div class="card-header">
          <span>Connect With Musicians</span>
          <i class="fas fa-arrow-right"></i>
        </div>
        <div class="musician-list-container">
          <div class="musician-list">
            <div class="musician">
              <img src="/images/avatar.png" alt="avatar" class="avatar" />
              <div class="info">
                <h4>Pranav Kapur</h4>
                <p>UI/UX designer</p>
              </div>
              
              
            </div>
            <% if (locals.allUsers) { %>
  <% allUsers.forEach(user => { %>
    <div class="musician">
      <img src="<%= user.profilePic || '/images/avatar.png' %>" 
           alt="<%= user.username %>" 
           class="avatar" />

      <div class="info">
        <h4><%= user.username %></h4>
        <p><%= user.role || 'UI/UX designer' %></p>
      </div>

      <form action="/requests/send" method="POST" style="margin: 0;">
        <input type="hidden" name="toId" value="<%= user._id %>">
        <button class="connect-btn" type="submit">Connect</button>
      </form>
    </div>
  <% }) %>
<% } else { %>
  <p class="text-white">No users found.</p>
<% } %>
          </div>
        </div>
      </div>
      <a href="/msg" class="messages-btn" style="text-decoration: none; color: inherit;">
  <i class="fab fa-facebook-messenger"></i>
  
  <div class="left-content">
    <span>Messages</span>
  </div>

  <div class="avatars">
    <img src="/images/avatar.png" alt="Avatar" />
    <img src="/images/avatar.png" alt="Avatar" />
    <img src="/images/avatar.png" alt="Avatar" />
  </div>
</a>

    </div>

  </div>
</div>
