}

.left .search {
  background-color: #1a1a1a;
  border: 0.0063rem solid #C0C0C0;
  padding: 0.625rem 0.9375rem 0.625rem 2.1875rem;
  border-radius: 1.5625rem;
  color: white;
  width: 25rem;
  outline: none;
  transition: border 0.2s ease;
}

.left .search:focus {
  border: 0.125rem solid #929BFF;
}

.search-icon {
  margin-top: 1.1111vh;
  position: absolute;
  left: 2.6875rem;
  color: #888;
  font-size: 0.875rem;
}

.top-section-container {
  display: flex;
  align-items: center;
  gap: 1.875rem;
  padding: 0.9375rem 1.875rem;
  background-color: #0c0c0c;
  margin-top: 2.3148vh;
}

.user-greeting {
  display: flex;
  align-items: center;
  gap: 1.25rem;
  margin: 0;
  flex-shrink: 0;
}

.profile-pic {
  width: 5.3125rem;
  height: 5.3125rem;
  border-radius: 50%;
}

.welcome-text .greet {
  font-size: 1.6084rem;
  color: #b0b0b0;
  margin: 0;
  font-weight: 300;
}

.welcome-text .username {
  font-size: 2.4131rem;
  font-weight: 300;
  color: white;
  margin: 0;
}

.story-bar {
  display: flex;
  gap: 2.125rem;
  overflow-x: auto;
  scrollbar-width: none;
  height: 9.2593vh;
  flex-shrink: 1;
  padding: 0;
  border: none;
  width: 50%;
  white-space: nowrap;
  margin-left: 3.75rem;
  
}

.story-bar::-webkit-scrollbar {
  display: none;
}

.story {
  min-width: 4.0625rem;
  height: 4.0625rem;
  border-radius: 50%;
  padding: 0.125rem;
  flex-shrink: 0;
  cursor: pointer;
  transition: transform 0.2s;
}

.story:hover {
  transform: scale(1.05);
}

.story img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  object-fit: cover;
}

.main-container {
  display: grid;
  grid-template-columns: 26.875rem 1fr 25rem;
  gap: 1.875rem;
  padding: 1.875rem;
  height: 100vh;
  overflow: hidden;
}

.center-column {
  height: calc(100vh - 13.8889vh);
  padding-right: 0.9375rem;
}

.left-column,
.center-column,
.right-column {
  overflow-y: auto;
  padding-right: 0.9375rem;
  display: flex;
  flex-direction: column;
  gap: 1.25rem;
}

.left-column::-webkit-scrollbar,
.center-column::-webkit-scrollbar,
.right-column::-webkit-scrollbar,
.studio-list-container::-webkit-scrollbar,
.post-container::-webkit-scrollbar,
.musician-list-container::-webkit-scrollbar {
  display: none;
}

.left-column,
.center-column,
.right-column,
.studio-list-container,
.musician-list-container {
  -ms-overflow-style: none;
  scrollbar-width: none;
}

.create-post {
  background-color: #111;
  border: 1px solid #333;
  border-radius: 0.75rem;
  padding: 1.25rem;
  box-sizing: border-box;
}

.post-input-section {
  display: flex;
  align-items: center;
  gap: 0.9375rem;
  margin-bottom: 1.25rem;
}

.post-avatar {
  width: 3.4375rem;
  height: 3.4375rem;
  border-radius: 50%;
}

.post-input {
